---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const characters = await getCollection('characters');

  const sorted = characters.sort(
    (a, b) => (a.data.order ?? 999) - (b.data.order ?? 999)
  );

  return sorted.map((char, index) => ({
    params: { slug: char.slug },
    props: {
      char,
      prev: sorted[index - 1] ?? null,
      next: sorted[index + 1] ?? null,
      current: index + 1,
      total: sorted.length,
    },
  }));
}

const { char, prev, next, current, total } = Astro.props;
const { Content } = await char.render();
---

<BaseLayout title={char.data.title}>

 

  <article class="character">
 <!-- 上ナビ -->
  <nav class="pager pager-top">
    {prev && <a href={`/characters/${prev.slug}`}>← {prev.data.title}</a>}
    <span class="pager-current">{current} / {total}</span>
    {next && <a href={`/characters/${next.slug}`}>{next.data.title} →</a>}
  </nav>
 {char.data.image ? (
  <img
    src={char.data.image}
    alt={char.data.title}
    class="character-image"
  />
) : (
  <div class="character-image placeholder">
    No Image
  </div>
)}


    <h1>{char.data.title}</h1>

    <table class="profile-table">
      <tr>
        <th>年齢</th>
        <td>{char.data.age}</td>
      </tr>
      <tr>
        <th>職業</th>
        <td>{char.data.role}</td>
      </tr>
    </table>

    <div class="content">
      <Content />
    </div>
  </article>

  <!-- 下ナビ（固定） -->
  <nav class="pager pager-fixed">
    {prev && <a href={`/characters/${prev.slug}`}>← {prev.data.title}</a>}
    <span class="pager-current">{current} / {total}</span>
    {next && <a href={`/characters/${next.slug}`}>{next.data.title} →</a>}
  </nav>

  <style>
    /* ---------- ナビ共通 ---------- */
    .pager {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
    }

    .pager a {
      flex: 1;
      padding: 10px 12px;
      border-radius: 10px;
      background: #f5f5f5;
      text-decoration: none;
      color: #333;
      font-size: 0.85rem;
      text-align: center;
    }

    .pager-current {
      font-size: 0.75rem;
      color: #888;
      white-space: nowrap;
    }

    /* ---------- 上ナビ ---------- */
    .pager-top {
      max-width: 800px;
      margin: 24px auto 16px;
    }

    /* ---------- 下ナビ（固定） ---------- */
    .pager-fixed {
      position: fixed;
      bottom: 12px;
      left: 50%;
      transform: translateX(-50%);
      width: calc(100% - 24px);
      max-width: 800px;

      padding: 10px 12px;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 14px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
      backdrop-filter: blur(6px);
      z-index: 100;
    }

    /* ---------- 本文 ---------- */
    .character {
      max-width: 800px;
      margin: 0 auto;
      padding-bottom: 110px;
    }

.character-image {
  width: 100%;
  height: 360px;
  object-fit: contain;
  border-radius: 12px;
  margin: 16px 0 24px;

  background: #fff;   /* 画像あり時は白 */
}



    .profile-table {
      width: 100%;
      border-collapse: collapse;
      margin: 16px 0 24px;
    }

    .profile-table th {
      width: 120px;
      padding: 8px;
      background: #f5f5f5;
      text-align: left;
      font-weight: normal;
    }

    .profile-table td {
      padding: 8px;
    }

    @media (max-width: 600px) {
      .pager {
        flex-direction: column;
      }
    }
    .character h1 {
  margin-top: 8px;
}

.profile-table {
  margin-top: 12px;
}
.pager-top a {
  background: transparent;
  font-size: 0.75rem;
  color: #666;
}

.pager-fixed a {
  font-weight: 500;
}
.character::after {
  content: "";
  display: block;
  height: 24px;
}
.placeholder {
  display: grid;
  place-items: center;
  color: #aaa;
  font-size: 0.85rem;
}
.placeholder {
  background: #f3f3f3;  /* ★ グレー */
  display: grid;
  place-items: center;
  color: #aaa;
}

.placeholder::before {
  font-size: 2.4rem;
  opacity: 0.45;
}



/* ★ No Image をアイコン化 */
.placeholder::before {
  display: block;
  font-size: 2rem;   /* ← アイコンサイズ */
  line-height: 1;
  opacity: 0.6;
}

@media (max-width: 600px) {
  .pager a {
    padding: 14px 16px;     /* ★ 押しやすく */
    font-size: 0.95rem;     /* ★ 文字少し大きく */
    min-height: 48px;       /* ★ 指サイズ基準 */
  }

  .pager-current {
    font-size: 0.85rem;
  }
}


  </style>


</BaseLayout>
